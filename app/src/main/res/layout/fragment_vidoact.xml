<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="320dp"
    android:layout_gravity="center"
    android:background="@drawable/oval_background">


    <TextView
        android:id="@+id/text_video_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="58dp"
        android:text="пистаели"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="257dp"
        android:backgroundTint="#9C2222"
        android:text="ачык" />

    <TextView
        android:id="@+id/textView_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_video_title"
        android:layout_alignParentStart="true"
        android:textColor="@color/white"
        android:layout_marginStart="24dp"
        android:layout_marginTop="78dp"
        android:text="Татар телен өйрәнегез һәм тестлар тапшырыгыз һәм аның өчен призлар алыгыз" />




</RelativeLayout>