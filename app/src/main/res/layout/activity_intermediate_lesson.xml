<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6F6BC0"
    android:orientation="vertical"
    >


    <ImageView
        android:id="@+id/imageView_nachalo"
        android:layout_width="259dp"
        android:layout_height="283dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="107dp"
        android:layout_marginEnd="80dp"
        app:srcCompat="@drawable/pers_fon" />

    <TextView
        android:id="@+id/textView_nachalo"
        android:layout_width="331dp"
        android:layout_height="165dp"

        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:textSize="20dp"
        android:layout_marginBottom="-121dp"
        android:gravity="center"
        android:text="Привет, мой друг!у тебя средний уровень языка! Это учебник по татарскому языку. Меня зовут Алсу. Пойдем узнавать новое вместе со мной!" />

    <Button
        android:id="@+id/button_nachalo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="106dp"
        android:layout_marginBottom="-115dp"
        android:layout_marginTop="150dp"
        android:layout_marginStart="100dp"
        android:backgroundTint="#299D65"
        android:text="Поехали!" />
</LinearLayout>