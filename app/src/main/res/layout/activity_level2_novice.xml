<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Level2_Novice"
    android:background="#6F6BC0"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView_nachalo"
        android:layout_width="259dp"
        android:layout_height="283dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="107dp"
        android:layout_marginEnd="80dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/pers_fon3" />

    <TextView
        android:id="@+id/textView_nachalo2"
        android:layout_width="331dp"
        android:layout_height="125dp"
        android:layout_marginStart="40dp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="-145dp"
        android:gravity="center"
        android:text="следующим из слов будет солнце и луна, солнце будет - кояш а луна будет - ай"
        android:textSize="20dp" />

    <Button
        android:id="@+id/button_nachalo3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-116dp"
        android:backgroundTint="#423E96"
        android:text="Дальше!" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="422dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-510dp"
        android:background="@drawable/rounded_header_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/headerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Обучение"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="139dp"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:src="@drawable/profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>